{
  "name": "@dreamer/web3",
  "version": "1.0.6-beta.12",
  "license": "MIT",
  "exports": {
    ".": "./src/mod.ts",
    "./client": "./dist/web3-client.esm.min.js"
  },
  "tasks": {
    "test": "bun test -A tests/*",
    "build": "deno run -A build-browser.ts"
  },
  "publish": {
    "include": [
      "src/**/*.ts",
      "dist/*.js",
      "dist/*.d.ts",
      "LICENSE.md",
      "README.md"
    ],
    "exclude": [
      "**/*.test.ts",
      "**/*.spec.ts",
      "**/test/**",
      "**/tests/**"
    ]
  },
  "lint": {
    "include": [
      "src/"
    ],
    "rules": {
      "tags": [
        "recommended"
      ],
      "exclude": [
        "no-explicit-any"
      ]
    }
  },
  "imports": {
    "viem": "npm:viem@^2.43.5",
    "@dreamer/service": "jsr:@dreamer/service@^1.0.0-beta.4",
    "@dreamer/test": "jsr:@dreamer/test@^1.0.0-beta.39"
  }
}
