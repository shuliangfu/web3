{
  "name": "@dreamer/web3",
  "version": "1.0.6-beta.1",
  "license": "MIT",
  "exports": {
    ".": "./src/mod.ts",
    "./client": "./src/client/mod.ts"
  },
  "scripts": {
    "test": "bun test -A tests/*"
  },
  "publish": {
    "include": [
      "src/mod.ts",
      "src/client/mod.ts",
      "LICENSE.md",
      "README.md"
    ],
    "exclude": [
      "**/*.test.ts",
      "**/*.spec.ts",
      "**/test/**",
      "**/tests/**"
    ]
  },
  "lint": {
    "include": [
      "src/"
    ],
    "rules": {
      "tags": [
        "recommended"
      ],
      "exclude": [
        "no-explicit-any"
      ]
    }
  },
  "imports": {
    "viem": "npm:viem@^2.43.5",
    "@dreamer/test": "jsr:@dreamer/test@^1.0.0-beta.4"
  }
}
